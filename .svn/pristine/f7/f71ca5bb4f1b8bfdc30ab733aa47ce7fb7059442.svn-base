<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>欢迎页面-X-admin2.0</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,user-scalable=yes, minimum-scale=0.4, initial-scale=0.8,target-densitydpi=low-dpi" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="/static/css/font.css">
    <link rel="stylesheet" href="/static/css/xadmin.css">
    <script type="text/javascript" src="/static/js/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="/static/lib/layui/layui.js" charset="utf-8"></script>
    <script type="text/javascript" src="/static/js/xadmin.js"></script>
    <!-- 让IE8/9支持媒体查询，从而兼容栅格 -->
    <!--[if lt IE 9]>
    <script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
    <script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
<div class="x-body">
    <form action="" method="post" class="layui-form layui-form-pane">

        <div class="layui-form-item">
            <label for="title" class="layui-form-label">
                <span class="x-red">*</span>视频名称
            </label>
            <div class="layui-input-inline">
                <input type="text" id="title" name="title" required="" autocomplete="off" class="layui-input">
            </div>

        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">
                <span class='x-red'>*</span>主图
            </label>
            <div class="layui-input-inline">
                <button type="button" class="layui-btn" id="img">上传图片</button>
            </div>
            <!-- <div class="layui-form-mid layui-word-aux">
                <span class="x-red">*</span>尺寸：750*329(px)
            </div> -->
        </div>
        <div class="layui-form-item">
            <label  class="layui-form-label">
                <span class='x-red'>*</span>主图预览
            </label>
            <img id="LAY_demo_upload"  width="100" src="">
            <input type="hidden" name="main_img" id="imgArr" lay-verify="img" value="">
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">
                <span class='x-red'>*</span>缩略图
            </label>
            <div class="layui-input-inline">
                <button type="button" class="layui-btn" id="img2">上传图片</button>
            </div>
            <!-- <div class="layui-form-mid layui-word-aux">
                <span class="x-red">*</span>尺寸：750*329(px)
            </div> -->
        </div>
        <div class="layui-form-item">
            <label  class="layui-form-label">
                <span class='x-red'>*</span>缩略图预览
            </label>
            <img id="LAY_demo_upload2"  width="100" src="">
            <input type="hidden" name="thumb_img" id="imgArr2" lay-verify="img" value="">
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">
                <span class='x-red'>*</span>视频
            </label>
            <div class="layui-input-inline">
                <button type="button" class="layui-btn" id="video">上传文件</button>
            </div>
            <!-- <div class="layui-form-mid layui-word-aux">
                <span class="x-red">*</span>尺寸：750*329(px)
            </div> -->
        </div>
        <div class="layui-form-item">
            <label  class="layui-form-label">
                <span class='x-red'>*</span>视频文件名
            </label>
            <div class="layui-input-inline">
                <input type="text" id="videoArr" name="video" class="layui-input layui-disabled" disabled>
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label"><span class="x-red">*</span>一级分类</label>
            <div class="layui-input-inline">
                <select id="p_type" lay-filter="brickType">
                    <option value="">一级分类</option>
                    {volist name="p_type" id="vo"}
                    <option value="{$vo.id}">{$vo.type_name}</option>
                    {/volist}
                </select>
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label"><span class="x-red">*</span>二级分类</label>
            <div class="layui-input-inline">
                <select name="type_id" id="type">
                    <option value="">二级分类</option>

                </select>
            </div>
        </div>

        <div class="layui-form-item">
            <label for="title" class="layui-form-label">
                <span class="x-red">*</span>关联医生
            </label>
            <div class="layui-input-inline">
                <input type="text" id="search" placeholder="请输入关键字" value="" autocomplete="off" class="layui-input" style="width: 125px;display: inline-block;">
                <span class="layui-btn" lay-submit="" lay-filter="search_doctor"><i class="layui-icon">&#xe615;</i></span>
            </div>

        </div>
        <table class="layui-table" style="width: 300px">
            <thead>
            <tr>
                <th>选择</th>

                <th>头像</th>
                <th>医生姓名</th>
            </tr>
            </thead>
            <tbody id="t_body">

            </tbody>
        </table>

        <div class="layui-form-item">
            <label class="layui-form-label">是否上架</label>
            <div class="layui-input-block">
                <input type="checkbox" name="status" lay-skin="switch">
            </div>
        </div>

        <div class="layui-form-item">

            <button class="layui-btn" type="button" lay-submit="" lay-filter="add">增加</button>
        </div>
    </form>
</div>

<script>
    layui.use(['form','layer','upload'], function(){
        $ = layui.jquery;
        var form = layui.form
                ,layer = layui.layer,upload = layui.upload;

        //change
        form.on('select(brickType)', function(data){
            var pid=data.value;

            if(pid == ""){
                return ;
            }
            $.ajax({
                type:"post",
                data:{pid:pid},
                url:'{:url("index/Video/updType")}',
                dataType:'json',
                success:function(json){
                    if(json.code==1) {
                        var str = "";
                        $.each(json.data, function( key, val ) {
                            str += "<option value='"+val.id+"'>"+val.type_name+"</option>";
                            $("#type").html(str);
                            form.render("select");
                        } );
                        return false;
                    }else{
                        layer.msg(json.msg, {icon: 2,time:1000});
                        return false;
                    }
                }
            });
        });

        var uploadInst = upload.render({
            elem:'#img'
            ,url: '/index.php/index/Base/upload' //上传接口
            ,done: function(res){
                //如果上传失败
                if(res.code > 0){
                    return layer.msg('上传失败');
                }
                //上传成功
                $('#LAY_demo_upload').attr('src',res.src);
                $('#imgArr').attr('value',res.src);
            }
        });

        var uploadInst2 = upload.render({
            elem:'#img2'
            ,url: '/index.php/index/Base/upload' //上传接口
            ,done: function(res){
                //如果上传失败
                if(res.code > 0){
                    return layer.msg('上传失败');
                }
                //上传成功
                $('#LAY_demo_upload2').attr('src',res.src);
                $('#imgArr2').attr('value',res.src);
            }
        });

        var uploadInst3 = upload.render({
            elem:'#video'
            ,url: '/index.php/index/Base/uploadVideo' //上传接口
            ,done: function(res){
                //如果上传失败
                if(res.code > 0){
                    return layer.msg('上传失败');
                }
                //上传成功
                $('#videoArr').attr('value',res.src);
            }
            ,accept: 'video'
        });
        //自定义验证规则
        form.verify({
            nikename: function(value){
                if(value.length < 5){
                    return '昵称至少得5个字符啊';
                }
            }
            ,pass: [/(.+){6,12}$/, '密码必须6到12位']
            ,repass: function(value){
                if($('#L_pass').val()!=$('#L_repass').val()){
                    return '两次密码不一致';
                }
            }
        });

        //监听提交
        form.on('submit(add)', function(data){
            $.ajax({
                type:"post",
                data:data.field,
                url:'{:url("index/Video/addVideo")}',
                dataType:'json',
                success:function(json){
                    if(json.code==1) {
                        //发异步，把数据提交给php
                        layer.alert(json.msg, {icon: 6}, function () {
                            window.parent.location.reload(); //刷新父页面
                            // 获得frame索引
                            var index = parent.layer.getFrameIndex(window.name);
                            //关闭当前frame
                            parent.layer.close(index);
                        });
                        return false;
                    }else{
                        layer.msg(json.msg, {icon: 2,time:1000});
                        return false;
                    }
                }
            });

        });


        form.on('submit(search_doctor)', function(data){

            var search = $("#search").val();
            $.ajax({
                type:"post",
                data:{search:search},
                url:'{:url("index/Video/searchDoctor")}',
                dataType:'json',
                success:function(json){
                    if(json.code==1) {
                        var str = "";
                        $.each(json.data, function( key, val ) {
                            str += '<tr><td><input type="radio" name="doctor_id" value="'+val.id+'"></td><td><img src="'+val.avatar+'"></td><td>'+val.name+'</td></tr>';
                            $("#t_body").html(str);
                        } );
                        form.render("radio");
                        return false;
                    }else{

                        return false;
                    }
                }
            });
        });

    });





</script>

</body>

</html>