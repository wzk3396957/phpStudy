*{
  margin: 0;
  padding: 0;
}

.left{
  float: left;
  padding-left: 10px;
  width: 20%;
}

.right{
  float: right;
  padding-right: 10px;
}

html,body,div,p,form,label,ul,li,dl,dt,dd,ol,img,button,b,em,strong,small,h1,h2,h3,h4,h5,h6{margin:0;padding:0;border:0;list-style:none;font-style:normal;}
body{
  font-family:SimHei,'Helvetica Neue',Arial,'Droid Sans',sans-serif;
  font-size:14px;color:#333;
  background:#f2f2f2;
}


.register{
  width: 100%;
  height: 100%;
  position:relative;
}

.bgimg{
  background:url("https://sjbz-fd.zol-img.com.cn/t_s120x90c/g5/M00/0F/09/ChMkJ1fJQjiIJe3UAAUUMx6qG6sAAU7mANygmAABRRL551.jpg") no-repeat;
 /*float: left;*/
 width: 100%;
 height: 100%;
 background-repeat: no-repeat;
 background-position: center;
 background-size: cover;
 /*-webkit-filter: blur(15px);*/
 filter: blur(2px);
 background-size: cover;
 z-index: -10;
 position: fixed;
}

.register-content{
  width: 100%;
  height: 64px;
  line-height: 64px;
  color: #fff;
  font-weight: bold;
}

input::-webkit-input-placeholder{
  color:#333;
}

.code span{
  border: none;
  background-color: transparent;
  color: #fff; 
}

.phone{
  display: flex;
}

.register-content input{
  padding: 0;
  height: 45px;
  background-color:transparent;
  border:none;
  outline: none;
  /*color: #fff;*/
}

.phone input{
  width: 103px;
  height: 50px;
  padding: 0;
  margin-top: 8px;
}


.sex input{
  width: 27px;
  height: 14px;
}

.submit{
  width: 100%;
  height: 50px;
  background-color: transparent;
  color: #fff;
  text-align: center;
  line-height: 50px;
  font-size: 25px;
  position: relative;
  /*float: left;*/
  bottom: 0;
  overflow: hidden;
}

.submit img{
  width: 35px;
  height: 35px;
  vertical-align: middle;
}



