    //订单管理
    public function order_info($openid){
        $re = Db::connect($this->connect) ->table('order')
                                            ->alias('o')
                                            ->join('user u','o.openid = u.openid')
                                            ->join('user u2','o.to_openid = u2.openid')
                                            ->field('o.*,u.username,u.tel,u2.username as to_user,u2.tel as to_tel')
