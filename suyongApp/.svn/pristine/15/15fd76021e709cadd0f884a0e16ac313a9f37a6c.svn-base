<?php

namespace app\home\controller;

use app\home\controller\Base;
use think\Db;

class Commission extends Base{

	private $connect = 'mysql://root:suyongkeji@suyongw.cn:3306/send#utf8';

	public function year(){
		$CONFIG = [
            'path' => [
                '首页',
                '年费分成设置'
            ]
        ]; 
        $this->assign('CONFIG', $CONFIG);
        $data = Db::connect($this->connect)->table('year_commission')->find();
        $this->assign('data', $data);
        return $this->fetch();
	}

	public function order(){
		$CONFIG = [
            'path' => [
                '首页',
                '订单分成设置'
            ]
        ]; 
        $this->assign('CONFIG', $CONFIG);
        $data = Db::connect($this->connect)->table('order_commission')->find();
        $this->assign('data', $data);
        return $this->fetch();
	}

    public function edit_order(){
        $data = input('post.');
        //百分比
        if(substr($data['up'], -1) == '%'){
            $data['up'] = (float)$data['up']/100;
          }
        if(substr($data['upup'], -1) == '%'){
            $data['upup'] = (float)$data['upup']/100;
        }
        //不是数字
        if(!is_numeric($data['up']) || !is_numeric($data['upup'])){
            return '2';
        }
        //整数
        if (is_numeric($data['up'])&&!strpos($data['up'], '.')) {
            $data['up'] = $data['up']/100;
        }
        if (is_numeric($data['upup'])&&!strpos($data['upup'], '.')) {
            $data['upup'] = $data['upup']/100;
        }

        $year = Db::connect($this->connect)->table('year_commission')->find();
        if($year){
            $data['id'] = $year['id'];
            $result = Db::connect($this->connect)->table('order_commission')->update($data);
        }else{
             $result = Db::connect($this->connect)->table('order_commission')->insert($data);
        }
        if($result!==false){
            return '1';
        }else{
            return '0';
        }
    }
}