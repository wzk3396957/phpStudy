<?php

namespace app\home\controller;

use app\home\controller\Base;
use think\Db;
use think\request;

class Order extends Base{

	private $connect = 'mysql://root:suyongkeji@suyongw.cn:3306/send#utf8';

    public function showList(){
        $CONFIG = [
            'path' => [
                '首页',
                '订单列表'
            ]
        ];
        $this->assign('CONFIG', $CONFIG);
        $area = Db::connect($this->connect)->table('order') ->group('area') ->field('area')->select();
        $this->assign('area',$area);
        $list = Db::connect($this->connect) ->table('order')
                                            ->alias('o')
                                            ->join('user u','o.openid = u.openid')
                                            ->field('o.*,u.username')
                                            ->paginate(2);
        $this->assign('list', $list);
        return $this->fetch();
    }

    public function area($data){
        $CONFIG = [
            'path' => [
                '首页',
                '订单列表'
            ]
        ];
        $this->assign('CONFIG', $CONFIG);
        $area = Db::connect($this->connect)->table('order') ->group('area') ->field('area')->select();
        $this->assign('area',$area);
        $list = Db::connect($this->connect) ->table('order')
                                            ->alias('o')
                                            ->join('user u','o.openid = u.openid')
                                            ->field('o.*,u.username')
                                            ->where('area',$area)
                                            ->paginate(2);
        $this->assign('list', $list);
        return $this->fetch();
    }
}