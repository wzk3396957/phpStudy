*{
	margin: 0;
	padding: 0;
}

body{
	width: 90%;
	height: 100%;
	margin: 0 auto;
	background-color: #F6F7FB;
}

a{
	text-decoration: none;
	color: #dd6572;
	margin-left: 10px;
	margin-top: 10px;

}
.adv-box{
	width: 100%;
	height: 80px;
	display: flex;
	flex-direction: row;
	align-items: center;
	background: #fff;
	margin-top: 30%
}

.adv-img{
	width: 50px;
	height: 50px;
	margin-left: 15px;
}

.adv-img img{
	width: 44px;
	height: 44px;
}

.adv-txt{
	width: 200px;
	margin-left: -20px;
	text-align: center;
}


.adv-btn button{
	border: none;
	color: #dd6572;
	background-color: #fff;
	font-size: 18px;
}

.adv-show{
	width: 100%;
	height: 25px;
	border: 1px solid #333;
	background-color: #fff;
	margin-top: 20px;
	overflow: overlay;
	}