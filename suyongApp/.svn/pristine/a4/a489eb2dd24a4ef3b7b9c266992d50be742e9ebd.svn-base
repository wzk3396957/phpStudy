       $rand_num = $this->rand_num();
       $re = $this->in_money($id,$money,$rand_num,2);
       if($re=='1'){
          $n =  $balance-$money;
          $res = Db::connect($this->connect)->table('knight')->where('id',$id)->update(['money'=>$n]);
