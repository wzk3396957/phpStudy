        $string = array_flip(str_split($string));
        $invite = strrev(ltrim(ltrim($invite,'0'),$string['W']));
        $id = 0;
        for($i=0;$i<strlen($invite);$i++){
            $id = bcadd(bcmul($string[$invite{$i}] , bcpow(33, $i)) , $id);
