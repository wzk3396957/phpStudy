    // 查询月份
    private function month($time,$k){
        if($time=='1'){//本月
            $start = strtotime(date('Y-m-01'));
            $end = strtotime(date('Y-m-01'))+(60*60*24*24);
            $month[$k] =array('between',[$start,$end]);
        }else if($time=='2'){//上个月
            $start = strtotime(date('Y-m-01'))-(60*60*24*24);
            $end = strtotime(date('Y-m-01'))-1;
            $month[$k] =array('between',[$start,$end]);
        }else{
            $month=null;
        } 
        return $month;
    }
