    // 根据id生成唯一邀请码
    private function setInvite($id,$string){
        $code = '';
        while ($id) {
            $mod = $id %33;
            $id = (int)$id /33;
            $code = $string[$mod].$code;
        }
        if(strlen($code) < 6){
            $code = str_pad($code,6,'0',STR_PAD_LEFT);
        }

        return $code;
    }

