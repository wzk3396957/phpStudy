.flex-row {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;

    -webkit-box-orient: horizontal;
    -webkit-flex-direction: row;
    flex-direction: row;
}
.flex-y-center{
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;

    -webkit-box-align: center;
    -webkit-align-items: center;
    -ms-flex-align: center;
    -ms-grid-row-align: center;
    align-items: center;
}
.info {
  width: 100%;
  background-color: rgba(84,185,255,.8);
  padding: 10px 12px 0 12px;
  color: #fff;
}

.info .info-title {
  border-bottom: 1px #fff solid;
  padding-bottom: 10px;
}

.info .info-title .info-img {
  width: 60px;
  height: 60px;
  border-radius: 60px;
}

.info .info-block {
  padding: 9px 5px;
}

.info .info-block .info-up {
  font-size: 13px;
  margin-bottom: 15px;
}

/* .info-blod {
  font-weight: bold;
} */

.info-big {
  font-size: 13px;
}

.info .info-content {
  width: 100%;
  padding-top: 11px;
}

.info .info-content .info-left {
  width: 50%;
}

.info .info-content .info-right {
  width: 50%;
  margin-top: 12px;
}

.info .info-content .info-left .info-label {
  padding-bottom: 20px;
}

.info-label .info-first {
  margin-bottom: 12px;
}

.info-right .info-btn {
  width: 60px;
  height: 35px;
  border: 1px #e3e3e3 solid;
  border-radius: 5px;
  float: right;
  text-align: center;
  line-height: 35px;
  font-size: 13px;
}