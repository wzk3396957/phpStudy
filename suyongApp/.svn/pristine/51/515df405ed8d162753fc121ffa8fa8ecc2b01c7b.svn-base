<div class="row">
    <div class="col-lg-12">
  
<div style="margin:0 auto; width:100%; line-height:25px; padding: 30px">
    <iframe src="" frameborder="0" name="iframeContent" style="display: none;"></iframe>
    <form method="post" id="uploadForm" action="" target="iframeContent" enctype="multipart/form-data" class="form-horizontal">
       


        <div class="form-group">
            <label class="col-sm-2 control-label">起送价：</label>
            <div class="col-sm-8"><input type="text" id="strat" name="strat" class="form-control"
                                         placeholder="" value="{$data.strat}"
                                         required>
                <span class="help-block m-b-none">*起送价</span>
            </div>
        </div><br>
        
        <div class="form-group">
            <label class="col-sm-2 control-label">超公里数：</label>
            <div class="col-sm-8"><input type="text" id="over_km" name="over_km" class="form-control"
                                         placeholder="" value="{$data.over_km}"
                                         required>
                <span class="help-block m-b-none">*超公里数</span>
            </div>
        </div><br>

        <div class="form-group">
            <label class="col-sm-2 control-label">价格：</label>
            <div class="col-sm-8"><input type="text" id="how_much_km" name="how_much_km" class="form-control"
                                         placeholder="" value="{$data.how_much_km}"
                                         required>
                <span class="help-block m-b-none">*超过公里数每一公里多少钱</span>
            </div>
        </div><br>

        
        <div class="form-group">
            <label class="col-sm-2 control-label">分类：</label>
            <div class="col-sm-8">
                <select id="area" name="area">
                        <option value="">选择区域</option>
                            {for start="0" end="count($area)" step="1" name="i"}
                            <option value="{$area[$i]}" {if $data.area==area[$i]}selected="selected"{/if}>{$area[$i]}</option>
                            {/for}
                </select>
                <span class="help-block m-b-none">*分类</span>
            </div>
        </div><br>
       
        

        <input type='hidden' name='id' id='id' value='{$data.id}'>
        <div class="form-group" style="padding: 20px">
            <div class="col-sm-4 col-sm-offset-2">
                <button class="btn btn-primary" data-style="zoom-in" type="submit" id="add_detail">申请计价规则</button>
            </div>
        </div>
    </form>
   </div>

    </div>
</div>